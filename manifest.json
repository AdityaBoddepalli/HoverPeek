{
  "manifest_version": 3,
  "name": "HoverPeek",
  "version": "1.0.0",
  "description": "Preview webpage titles when hovering over links",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png",
      "1024": "assets/icon-1024.png"
    }
  }
}

